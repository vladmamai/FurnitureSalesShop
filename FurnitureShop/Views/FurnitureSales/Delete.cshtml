@model FurnitureShopApp.DAL.Models.FurnitureSale

@{
    ViewData["Title"] = "Рахунки клієнтів";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h4>Ви справді хочете видалити цей запис?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Клієнт
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.CustFullName)
        </dd>
        <dt class="col-sm-2">
            Працівник
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.EmpFullName)
        </dd>
        <dt class="col-sm-2">
            Дата фіскальної операції
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BuyingDate)
        </dd>
        <dt class="col-sm-2">
            Загальна сума до сплати
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CheckId" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Index">Повернутись до списку</a>
    </form>
</div>
