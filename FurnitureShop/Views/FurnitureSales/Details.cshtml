@model FurnitureShopApp.DAL.Models.FurnitureSale

@{
    ViewData["Title"] = "Рахунки клієнтів";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Рахунок клієнта</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Клієнт
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.CustFullName)
        </dd>
        <dt class="col-sm-2">
            Продавець - консультант
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.EmpFullName)
        </dd>
        <dt class="col-sm-2">
            Дата фіскальної операції
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BuyingDate)
        </dd>
        <dt class="col-sm-2">
            Загальна сума до сплати
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CheckId">Редагувати</a> |
    <a asp-action="Index">Повернутись до списку</a>
</div>
