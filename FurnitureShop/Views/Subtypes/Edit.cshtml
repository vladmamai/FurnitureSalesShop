@model FurnitureShopApp.DAL.Models.Subtype

@{
    ViewData["Title"] = "Підтипи меблів";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h4>Підтип меблів</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SubtypeId" />
            <div class="form-group">
                <label asp-for="SubtypeName" class="control-label">Назва</label>
                <input asp-for="SubtypeName" class="form-control" />
                <span asp-validation-for="SubtypeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeId" class="control-label">Тип меблів</label>
                <select asp-for="TypeId" class="form-control selectpicker" data-live-search="true" asp-items="ViewBag.TypeId"></select>
                <span asp-validation-for="TypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти зміни" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернутись до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
