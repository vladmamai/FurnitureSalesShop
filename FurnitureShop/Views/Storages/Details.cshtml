@model FurnitureShopApp.DAL.Models.Storage

@{
    ViewData["Title"] = "Список складів";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Склад</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Адрес складу
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StorageAddress)
        </dd>
        <dt class = "col-sm-2">
            Адрес магазину
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Shop.ShopAddress)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.StorageId">Редагувати</a>|
    <a asp-action="Index">Повернутись до списку</a>
</div>
