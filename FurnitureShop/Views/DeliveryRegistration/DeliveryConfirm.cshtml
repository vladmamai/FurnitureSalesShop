@model FurnitureShopApp.DAL.Models.Delivery

@{
    ViewData["Title"] = "Оформлення доставки товару";
    Layout = "~/Views/Shared/_LayoutSeller.cshtml";
}

<h1>Оформлення завершено!</h1>
<br/>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Номер накладної
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeliveryId)
        </dd>
        <dt class="col-sm-2">
            Номер чеку товару
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CheckId)
        </dd>
        <dt class="col-sm-2">
            Адреса доставки товару
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            Дата відправлення
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShippingDate)
        </dd>
        <dt class="col-sm-2">
            Дата прибуття
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeliveryDate)
        </dd>
        <dt class="col-sm-2">
            Ціна доставки
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeliveryPrice)
        </dd>
    </dl>
</div>
<div>
    <button type="button" class="btn btn-success" onclick='window.location = "@Url.Action("IndexSeller", "Home")";'>На головну сторінку</button>
</div>
