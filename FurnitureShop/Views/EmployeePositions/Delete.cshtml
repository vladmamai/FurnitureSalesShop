@model FurnitureShopApp.DAL.Models.EmployeePosition

@{
    ViewData["Title"] = "Посади працівників";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h4>Ви справді хочете видалити цей запис?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Назва посади
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PositionName)
        </dd>
        <dt class="col-sm-2">
            Місячний оклад
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Salary)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="PositionId" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Index">Повернутись до списку</a>
    </form>
</div>
