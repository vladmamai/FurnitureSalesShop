@model IEnumerable<FurnitureShopApp.DAL.Models.Type>

@{
    ViewData["Title"] = "Типи меблів";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="d-flex">
        <div class="col-9">
             <h1 class="float-left">Типи меблів</h1>
        </div>
        <div class="col-3">
            <p><a asp-action="Create" class="btn btn-warning btn-block border-warning">Додати новий запис</a></p>
            <p><a asp-action="Search" class="btn btn-outline-info btn-block border-info">Пошук</a></p>
        </div>
    </div>
</div>
<table class="table">
    <thead class="thead-light">
        <tr class="d-flex">
            <th class="col-5">
                Ідентифікатор типу товару
            </th>
            <th class="col-5">
                Назва
            </th>
            <th class="col-2"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="d-flex">
                <td class="col-5">
                    @Html.DisplayFor(modelItem => item.TypeId)
                </td>
                <td class="col-5">
                    @Html.DisplayFor(modelItem => item.TypeName)
                </td>
                <td class="col-2">
                    <a asp-action="Edit" asp-route-id="@item.TypeId" class="btn btn-outline-warning btn-block border-warning">Редагувати</a>
                    <a asp-action="Details" asp-route-id="@item.TypeId" class="btn btn-outline-info btn-block border-info">Деталі</a>
                    <a asp-action="Delete" asp-route-id="@item.TypeId" class="btn btn-outline-danger btn-block border-danger">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>
