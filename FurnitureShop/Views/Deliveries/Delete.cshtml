@model FurnitureShopApp.DAL.Models.Delivery

@{
    ViewData["Title"] = "Доставка товару";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h4>Ви справді хочете видалити цей запис?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Номер чеку
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Check.CheckId)
        </dd>
        <dt class="col-sm-2">
            Адреса доставки
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            Дата відправлення
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShippingDate)
        </dd>
        <dt class="col-sm-2">
            Дата прибуття
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeliveryDate)
        </dd>
        <dt class="col-sm-2">
            Ціна доставки
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeliveryPrice)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="DeliveryId" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Index">Повернутись до списку</a>
    </form>
</div>
