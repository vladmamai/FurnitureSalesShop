@model FurnitureShopApp.DAL.Models.Delivery

@{
    ViewData["Title"] = "Доставка товару";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Накладна на доставку товару</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Номер чеку
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Check.CheckId)
        </dd>
        <dt class="col-sm-2">
            Адреса доставки
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            Дата відправлення
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShippingDate)
        </dd>
        <dt class="col-sm-2">
            Дата прибуття
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeliveryDate)
        </dd>
        <dt class="col-sm-2">
            Ціна доставки
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeliveryPrice)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.DeliveryId">Редагувати</a> |
    <a asp-action="Index">Повернутись до списку</a>
</div>
