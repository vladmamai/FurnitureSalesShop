@model FurnitureShopApp.DAL.Models.Employee

@{
    ViewData["Title"] = "Працівники";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h4>Ви справді хочете видалити цей запис?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Ім'я
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmpName)
        </dd>
        <dt class="col-sm-2">
            Прізвище
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmpSurname)
        </dd>
        <dt class="col-sm-2">
            Серія паспорту
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Passport)
        </dd>
        <dt class="col-sm-2">
            Дата працевлаштування
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmploymentDate)
        </dd>
        <dt class="col-sm-2">
            Посада
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Position.PositionName)
        </dd>
        <dt class="col-sm-2">
            Місце роботи
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Shop.ShopAddress)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="EmployeeId" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Index">Повернутись до списку</a>
    </form>
</div>
