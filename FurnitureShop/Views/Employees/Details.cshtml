@model FurnitureShopApp.DAL.Models.Employee

@{
    ViewData["Title"] = "Працівники";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Працівник</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Ім'я
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmpName)
        </dd>
        <dt class="col-sm-2">
            Прізвище
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmpSurname)
        </dd>
        <dt class="col-sm-2">
            Серія паспорту
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Passport)
        </dd>
        <dt class="col-sm-2">
            Дата працевлаштування
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmploymentDate)
        </dd>
        <dt class="col-sm-2">
            Посада
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Position.PositionName)
        </dd>
        <dt class="col-sm-2">
            Місце роботи
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Shop.ShopAddress)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.EmployeeId">Редагувати</a> |
    <a asp-action="Index">Повернутись до списку</a>
</div>
