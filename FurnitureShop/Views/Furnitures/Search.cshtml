@model FurnitureShopApp.DAL.Models.Subtype

@{
    ViewData["Title"] = "Каталог меблів";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Пошук</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Search">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TypeId" class="control-label">Тип товару</label>
                <select asp-for="TypeId" class="form-control selectpicker" data-live-search="true" asp-items="ViewBag.TypeId">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="SubtypeId" class="control-label">Підтип товару</label>
                <select asp-for="SubtypeId" class="form-control selectpicker" data-live-search="true" asp-items="ViewBag.SubtypeId">
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Підтвердити пошук" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернутись до списку</a>
</div>

