@model FurnitureShopApp.DAL.Models.Furniture

@{
    ViewData["Title"] = "Каталог меблів";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h4>Меблі</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CatalogId" />
            <div class="form-group">
                <label asp-for="FurnitureName" class="control-label">Назва</label>
                <input asp-for="FurnitureName" class="form-control" />
                <span asp-validation-for="FurnitureName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubtypeId" class="control-label">Підтип товару</label>
                <select asp-for="SubtypeId" class="form-control selectpicker" data-live-search="true" asp-items="ViewBag.SubtypeId"></select>
                <span asp-validation-for="SubtypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyId" class="control-label">Компанія - виробник</label>
                <select asp-for="CompanyId" class="form-control selectpicker" data-live-search="true" asp-items="ViewBag.CompanyId"></select>
                <span asp-validation-for="CompanyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Material" class="control-label">Матеріал</label>
                <input asp-for="Material" class="form-control" />
                <span asp-validation-for="Material" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label">Колір</label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Guarantee" class="control-label">Гарантія</label>
                <input asp-for="Guarantee" class="form-control" />
                <span asp-validation-for="Guarantee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Опис</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернутись до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
