@model FurnitureShopApp.DAL.Models.FurnitureShop

@{
    ViewData["Title"] = "Перелік магазинів";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h4>Ви справді хочете видалити цей запис?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Адрес магазину
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShopAddress)
        </dd>
        <dt class="col-sm-2">
            Пошта Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShopEmail)
        </dd>
        <dt class="col-sm-2">
            Номер телефону
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShopPhoneNum)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ShopId" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Index">Повернутись до списку</a>
    </form>
</div>
