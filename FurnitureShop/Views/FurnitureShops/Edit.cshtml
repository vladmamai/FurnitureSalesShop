@model FurnitureShopApp.DAL.Models.FurnitureShop

@{
    ViewData["Title"] = "Перелік магазинів";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h4>Магазин меблів</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ShopId" />
            <div class="form-group">
                <label asp-for="ShopAddress" class="control-label">Адреса магазину</label>
                <input asp-for="ShopAddress" class="form-control" />
                <span asp-validation-for="ShopAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShopEmail" class="control-label">Пошта Email</label>
                <input asp-for="ShopEmail" class="form-control" />
                <span asp-validation-for="ShopEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShopPhoneNum" class="control-label">Номер телефону</label>
                <input asp-for="ShopPhoneNum" class="form-control" />
                <span asp-validation-for="ShopPhoneNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернутись до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
