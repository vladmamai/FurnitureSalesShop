@model FurnitureShopApp.DAL.Models.CompanyDeveloper

@{
    ViewData["Title"] = "Компанії - виробники";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Компанія - виробник</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Назва компанії
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ComName)
        </dd>
        <dt class = "col-sm-2">
            Адреса
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ComAddress)
        </dd>
        <dt class = "col-sm-2">
            Пошта
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ComEmail)
        </dd>
        <dt class = "col-sm-2">
            Номер телефону
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ComPhoneNum)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CompanyId">Редагувати</a> |
    <a asp-action="Index">Повернутись до списку</a>
</div>
