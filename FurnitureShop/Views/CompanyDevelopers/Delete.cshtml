@model FurnitureShopApp.DAL.Models.CompanyDeveloper

@{
    ViewData["Title"] = "Компанії - виробники";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h4>Ви справді хочете видалити цей запис?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Назва компанії
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ComName)
        </dd>
        <dt class="col-sm-2">
            Адреса
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ComAddress)
        </dd>
        <dt class="col-sm-2">
            Пошта
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ComEmail)
        </dd>
        <dt class="col-sm-2">
            Номер телефону
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ComPhoneNum)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="CompanyId" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Index">Повернутись до списку</a>
    </form> 
</div>
