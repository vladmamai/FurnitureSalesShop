@model IEnumerable<FurnitureShopApp.DAL.Models.FurnitureBillingDataModel>

@{
    ViewData["Title"] = "Оформлення замовлення";
    Layout = "~/Views/Shared/_LayoutSeller.cshtml";
}

<h1>Деталі замовлення</h1>

<div>
    @foreach (var item in Model)
    {
    <dl class="row">
        <dt class="col-sm-2">
            Назва товару
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => item.FurnitureName) (@Html.DisplayFor(modelItem => item.Color))
        </dd>
        <dt class="col-sm-2">
            Кількість одиниць
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => item.QuantitySelected) од.
        </dd>
        <dt class="col-sm-2">
            Ціна одиниці товару
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => item.RetailPrice) грн.
        </dd>
    </dl>
    <hr />
    }
</div>
<p>Товару обрано на суму : @ViewData["SumOfBill"] грн.</p>
<br/>
<h2>Дії</h2>
<div>
    <a asp-action="Index">Повернутись до оформлення замовлення</a>
</div>
<div>
    <a asp-action="BillingConfirm">Завершити оформлення замовлення</a>
</div>
<div>
    <a asp-action="Discount">Врахувати знижку клієнта</a>
</div>