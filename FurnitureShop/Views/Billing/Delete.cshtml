@model FurnitureShopApp.DAL.Models.CheckDetails

@{
    ViewData["Title"] = "Оформлення замовлення";
    Layout = "~/Views/Shared/_LayoutSeller.cshtml";
}

<h3>Ви дійсно хочете прибрати цей запис з замовлення?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Назва товару
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Furniture.Catalog.FurnitureName)
        </dd>
        <dt class="col-sm-2">
            Кількість одиниць
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuantitySelected)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CheckDetailsId" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Index">Повернутись до списку</a>
    </form>
</div>
