@model FurnitureShopApp.DAL.Models.FurnitureInStorage

@{
    ViewData["Title"] = "Наявна кількість товару";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h4>Ви справді хочете видалити цей запис?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Назва товару
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Catalog.FurnitureName)
        </dd>
        <dt class="col-sm-2">
            Закупівельна ціна
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WholesalePrice)
        </dd>
        <dt class="col-sm-2">
            Ціна на продаж
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RetailPrice)
        </dd>
        <dt class="col-sm-2">
            Кількість одиниць
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuantityInStorage)
        </dd>

        <dt class="col-sm-2">
            Місцезнаходження товару
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Storage.StorageAddress)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="FurnitureId" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Index">Повернутись до списку</a>
    </form>
</div>
