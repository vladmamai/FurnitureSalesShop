@model FurnitureShopApp.DAL.Models.CheckDetails

@{
    ViewData["Title"] = "Деталі рахунків клієнтів";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h4>Ви справді хочете видалити цей запис?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Номер чеку
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Check.CheckId)
        </dd>
        <dt class="col-sm-2">
            Ідентифікатор товару
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Furniture.FurnitureId)
        </dd>
        <dt class="col-sm-2">
            Назва товару
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Furniture.Catalog.FurnitureName)
        </dd>
        <dt class="col-sm-2">
            Кількість одиниць товару
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuantitySelected)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CheckDetailsId" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Index">Повернутись до списку</a>
    </form>
</div>
